generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SecaoProduto {
  id               String  @id @default(uuid())
  name             String  @unique
  possuiAdicionais Boolean

  produtos Produto[] @relation("produtos")

  @@map("secoes_produto")
}

model SecaoRecheio {
  id       String    @id @default(uuid())
  name     String    @unique
  recheios Recheio[] @relation("recheios")

  @@map("secoes_recheios")
}

model Produto {
  id                  String @id @default(uuid())
  name                String
  obs                 String
  img                 String
  price               Float
  qntd_max_adicionais Int

  created_at DateTime @default(now())
  update_at  DateTime @updatedAt

  secao    SecaoProduto @relation("produtos", fields: [id_secao], references: [id])
  id_secao String

  @@map("produtos")
}

model Recheio {
  id           String @id @default(uuid())
  name         String @unique
  qntd_recheio Int

  id_secao String
  secao    SecaoRecheio @relation("recheios", fields: [id_secao], references: [id])

  @@map("recheios")
}
