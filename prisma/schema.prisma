generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SecaoProduto {
  id String @id @default(uuid())
  name String @unique
  possuiAdicionais Boolean

  produtos Produto[] @relation("produtos")

  @@map("secoes_produto")
}

model SecaoRecheio {
  id String @id @default(uuid())
  name String @unique
  recheios Recheio[] @relation("recheios")

  @@map("secoes_recheios")
}

model Produto {
  id String @id @default(uuid())
  name String @unique
  obs String
  img String
  price Float
  qntd_max_adicionais Int

  created_at DateTime @default(now())
  update_at DateTime @updatedAt

 
  idSecao String
  secao SecaoProduto @relation("produtos", fields: [idSecao], references: [id])

  @@map("produtos")
}

model Recheio {
  id String @id @default(uuid())
  name String @unique
  qntd_recheio Int

  idSecao String
  secao SecaoRecheio @relation("recheios", fields: [idSecao], references: [id])

  @@map("recheios")
}
